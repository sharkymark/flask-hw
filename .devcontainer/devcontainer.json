{
    "name": "Flask Development",
    "build": {
      "dockerfile": "../Dockerfile",
      "context": ".."
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance"
        ],
        "settings": { 
          "terminal.integrated.shell.linux": "/bin/bash"
        }  
      }
    },
    "postCreateCommand": "flask run --host=0.0.0.0",
    "forwardPorts": [5001]
    }

  